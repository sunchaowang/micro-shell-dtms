{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src//**/*.vue",
    // "src/**/vite.config.ts",
    "vite.config.ts"
  ],

  "exclude": [
    "node_modules",
    "apps/*/node_modules",
    "apps/*/src/**/*.test.ts",
    "apps/*/src/**/*.spec.ts",
    "apps/*/src/**/*.test.tsx",
    "apps/*/src/**/dist/*.d.ts"
  ]
}
